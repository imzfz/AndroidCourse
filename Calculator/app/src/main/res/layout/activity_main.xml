            android:text="@string/num8"
            android:background="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            />
        <cn.imzfz.calculator.KeyView
            android:id="@+id/num9"
            android:layout_height="wrap_content"
